
	<h1>
	  <!--<strong>Title:</strong>-->
	  <%= @homework.title %>
	</h1>

	<h3>
	  <!--<strong>Question:</strong>-->
	  <%= @homework.question %>
	</h3>
	<br/>



<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Latest Answer</th>
    </tr>
  </thead>

  <tbody>

    <% @answers.each do |answer| %>
      <tr>
        <td>	
              <a href="<%=show_users_homework_answers_path(answer.user.id, @homework.id)%>"> <%= answer.user.username %></a> 
        </td>
        <td><%= answer.body %></td>
      </tr>

    <% end %>

  </tbody>
</table>
